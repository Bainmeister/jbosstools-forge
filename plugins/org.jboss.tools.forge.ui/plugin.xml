<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="JBoss Forge"
            id="org.jboss.tools.forge.ui">
      </category>
      <wizard
            category="org.jboss.tools.forge.ui"
            class="org.jboss.tools.forge.ui.wizards.ForgeWizard"
            hasPages="true"
            icon="icons/jbossforge_icon_16px.png"
            id="org.jboss.tools.forge.ui.wizard.RunCommand"
            name="Run a Forge Command">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.jboss.tools.forge.ui"
            name="JBoss Forge">
      </category>
      <command
            categoryId="org.jboss.tools.forge.ui"
            id="org.jboss.tools.forge.ui.command.runForgeCommand"
            name="Run a Forge Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jboss.tools.forge.ui.handlers.ForgeCommandHandler"
            commandId="org.jboss.tools.forge.ui.command.runForgeCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.jboss.tools.forge.ui.command.runForgeCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>

</plugin>
